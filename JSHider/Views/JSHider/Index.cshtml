
@{
    Layout = null;
    string jsKey = ViewBag.Key;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>

        .myDiv {
            margin-top: 150px; 
            color: rgb(32,112,159);
            font-size: 2.2em;
            font-family: sans-serif;
            display: inline-block;
            padding: 8px 20px;
            border-radius: 4px;
            border:solid 1px rgba(0,0,0,0.6);
            font-weight: bold,;
            cursor:pointer;
            transition: all 0.4s;
        }

        .myDiv:hover{transform:scale(1.1);}

        .clickButton{font-size:1.1em;}

    </style>
</head>
<body>
    <br /><br /><br />
                <center>

                    <input type="button" class="clickButton" value="Click" />
                    <br/><br />
                    <div class="myDiv">
                        Hello world
                    </div>

                </center>
    <!--jQuery-->
    <script src="~/Scripts/jquery-3.3.1.js"></script>

    <!--The script you want to hide-->
    <script src="/JSHider/ShowJS?key=@jsKey"></script>
</body>
</html>
